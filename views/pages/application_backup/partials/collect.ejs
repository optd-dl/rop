<div class="page-head"><h2><%= __('My Favorite')%></h2>
    <ol class="breadcrumb">
        <li><a href="javascript:" ng-click="locate('')"><%= __('Home.Page')%></a></li>
        <li><a href="javascript:" ng-click="go('application')"><%= __('Applications')%></a></li>
        <li><a href="javascript:" ng-click="go('userinfos')"><%= __('My Preference')%></a></li>
        <li class="active"><%= __('My Favorite')%></li>
    </ol>
</div>

<div class="container-fluid page-body clearfix" > <!--mason-card options="options" list="list"-->
    <div class="row">
        <div class="col-xs-12">
            <form class="form-inline " style="">
                <div class="form-group form-group-sm pr-10">
                    <label for="user_name" class=""><%= __('Nickname for favored supplier')%>: </label>
                    <input type="text" class="form-control input-sm" id="user_name" placeholder="<%= __('Please enter nickname for favored supplier')%>..." ng-model="apiSearchParam.ssv_user_name">
                </div>
                <button type="button" class="btn btn-warning btn-sm mr-10" ng-click="apiRefresh()"><%= __('Search.Page')%></button>
            </form>
            <div class="divider" style="margin-top: 25px"/>
            <table class="table table-condensed table-hover table-striped" style="margin-bottom:0">
                <thead>
                <tr>

                    <th width="40%"><%= __('Favored Supplier')%></th>
                    <th class="text-center" width="100"><%= __('Remark')%></th>
                    <th class="text-center" width="100"><%= __('Time Added')%></th>
                    <th class="text-center" width="75"><%= __('Operation')%></th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="api in appApiList">

                    <td >{{api.ssv_user_name}}</td>
                    <td >{{api.remark}}</td>
                    <td class="text-center">{{api.rx_insertTime}}</td>
                    <td class="text-center" >
                        <a href="javascript:" ng-click="deleteApp(api)"><%= __('Delete')%></a>

                    </td>
                </tr>
                </tbody>
            </table>
            <nav class="rop-paging text-center" rop-pagination searcher="apiSearcher" index="apiPageIndex" size="apiPageSize" total="apiTotal">
            </nav>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="doc_update" tabindex="-1" role="dialog" aria-labelledby="docUpdateLabel"  >
    <div class="modal-dialog " role="document" style="width: 1000px;">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"> </button>
                <h4 class="modal-title" id="appUpdateLabel" >{{appDetails.message_title}}</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <p ng-bind-html="appDetails.message_content | unescapeHtml | trusthtml"></p>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-sm" data-dismiss="modal"><%= __('Close')%></button>
            </div>
        </div>
    </div>
</div>
