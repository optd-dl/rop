<div class="aboutus-row md-whiteframe-3dp">
    <div flex-offset-gt-lg="10" flex-gt-lg="90" flex-offset-lg="5" flex-lg="95" flex-offset="0" flex="100" layout="row" layout-align="start" layout-fill>
        <div layout="column" layout-align="center" class="aboutus" flex="25">
            <h1 class="md-display-1"><%= __('Supplier.index.about') %> {{ssv_intro.user_name}}</h1>
            <p class="md-body-1" ng-repeat="desc in ssv_intro.user_intro.split('/n')">{{desc}}</p>
            <div layout="row" layout-align="center" ng-show="ssv_intro.website">
                <md-button class="md-primary md-raised md-radius-button-1" aria-label="Settings" ng-href="{{ssv_intro.website}}" target="_blank">
                    <%= __('Supplier.index.checkdetails') %>
                </md-button>
            </div>
        </div>
        <div flex></div>
        <div layout="column" layout-align="center" class="news" ng-show="ssv_intro.noticelist && ssv_intro.noticelist.length" ng-style="{width:(ssv_feature.function_list && ssv_feature.function_list.length?(100/ssv_feature.function_list.length):33.33)+'vw'}">
            <h1><%= __("Supplier.index.whatsup")%></h1>

            <div layout="row" layout-align="center">
                <nav>
                    <ul class="nav nav-stacked">
                        <li ng-repeat="notice in ssv_intro.noticelist">
                            <a href="javascript:" ng-click="go('info')">{{notice.notice_title}}<span class="pull-right ml-20"><i class="fa fa-angle-right fa-lg"></i></span></a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
