<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval=5000>
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" ng-repeat="carousel in carousels" data-slide-to="{{$index}}" ng-class="{active:$first}"></li>
        <li data-target="#myCarousel" data-slide-to="0" class="active" ng-if="!carousels || !carousels.length"></li>
        <li data-target="#myCarousel" data-slide-to="1" ng-if="!carousels || !carousels.length"></li>
    </ol>
    <div class="carousel-inner" role="listbox" ng-if="carousels && carousels.length">
        <div class="item" ng-repeat="carousel in carousels" ng-class="{active:$first}" id="myCarousel{{$index}}" ng-style="{'background':'url('+carousel.image_url+') no-repeat center center/cover'}" >
            <!--<img class="" ng-src="{{carousel.image_url}}" alt="slide">-->
            <a class="" layout="column" layout-align="center" layout-fill ng-href="{{carousel.image_link}}" target="_blank">
                <div layout="row" layout-align="center">
                    <div class="text" flex="40">
                        <h1 class="md-display-2" ng-bind-html="carousel.image_title | unescapeHtml | trusthtml"></h1>
                        <p class="md-body-1" ng-bind-html="carousel.image_desc | unescapeHtml | trusthtml"></p>
                    </div>
                </div>
            </a>
        </div>
    </div>
    <div class="carousel-inner" role="listbox" ng-if="!carousels || !carousels.length" >
        <div class="item active" id="myCarousel0" style="'background':'url(/resource/supplier/mr1.jpg) no-repeat center center/cover'"></div>
        <div class="item" id="myCarousel1" style="'background':'url(/resource/supplier/mr2.jpg) no-repeat center center/cover'"></div>
    </div>
</div><!-- /.carousel -->

